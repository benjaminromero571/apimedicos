# Configuración de la API - Medical System
# Copiar como .env y personalizar según el entorno

# Entorno de la aplicación
APP_ENV=development
APP_DEBUG=true

# Configuración de Base de Datos
DB_HOST=localhost
DB_USER=root
DB_PASS=
DB_NAME=gico
DB_CHARSET=utf8mb4
DB_SSL_MODE=false

# Configuración JWT
JWT_SECRET=tu_clave_secreta_muy_segura_cambiar_en_produccion_2024
JWT_ISSUER=api.sistema-medico.local
JWT_AUDIENCE=sistema-medico-frontend

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=3600
RATE_LIMIT_BURST=20

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000

# Logging de Seguridad
SECURITY_LOG_FILE=logs/security.log
SECURITY_LOG_LEVEL=INFO
SECURITY_LOG_MAX_SIZE=10485760
SECURITY_LOG_RETENTION=30
SECURITY_REMOTE_LOG=false
SECURITY_REMOTE_ENDPOINT=

# Configuración de Email (futuro)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM=noreply@sistema-medico.local

# Configuración de archivos
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,pdf,doc,docx
UPLOAD_PATH=uploads/

# Configuración de caché
CACHE_ENABLED=false
CACHE_DRIVER=file
CACHE_TTL=3600

# URLs y dominios
APP_URL=http://localhost/api
FRONTEND_URL=http://localhost:3000

# Configuración de sesión
SESSION_LIFETIME=86400
SESSION_SECURE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax